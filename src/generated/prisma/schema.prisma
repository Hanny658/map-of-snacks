enum Stock {
  plenty
  mid
  low
  gone
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==== Following are the data types, note that each one should have a "name" field for displaying ====

model User {
  id        String   @id @default(uuid())
  email     String   @unique // make sure email can be used for login
  name      String
  password  String
  createdAt DateTime @default(now())
}

model Place {
  identifier String    @id
  name       String
  lng        Float
  lat        Float
  cheapies   Cheapie[]
}

model Cheapie {
  id        Int       @id @default(autoincrement())
  name      String
  store     String
  quantity  Int
  price     Float
  exp       DateTime?
  image     String?
  stock     Stock     @default(low)
  createdAt DateTime  @default(now())

  place Place @relation(fields: [store], references: [identifier])
}
